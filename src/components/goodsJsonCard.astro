---
import goods from "../data/goods.json";
import GoodsLayout from "../layouts/goodsLayout.astro";
import Index from "../pages/index.astro";
import Index3 from "../pages/index3.astro";
console.log(goods);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>商品一覧</title>
    <style lang="scss">
      .merchandise-container {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
      }
      .merchandise-List {
        margin-bottom: 20px;
      }
      .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        width: calc(33.333% - 16px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
      }
      .card img {
        width: 100%;
        height: auto;
      }
      .card h3 {
        margin: 0;
        padding: 16px;
        background-color: #f8f8f8;
      }
      .card p {
        padding: 0 16px 16px;
        margin: 0;
      }
      .card:hover {
        transform: scale(1.05);
      }
      .hidden {
        display: none;
      }
      .button-container {
        text-align: center;
        margin-top: 16px;
      }
      .load-more {
        padding: 8px 16px;
        font-size: 16px;
        cursor: pointer;
      }

      @media (max-width: 800px) {
        .card {
          width: calc(50% - 16px);
        }
      }

      @media (max-width: 500px) {
        .card {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <section class="merchandise">
      <h2 class="merchandise-List">商品一覧</h2>
      <div class="merchandise-container">
        {
          goods.map((list, index) => (
            <div class={`card ${index >= 9 ? "hidden" : ""}`} key={index}>
              <div>
                <img
                  src={`/14_ecsite/images/${list.itemphotos[0]}`}
                  alt={list.name}
                />
              </div>
              <h3>{list.name}</h3>
              <p>{list.price}円</p>
              <p class="sold">{list.state}</p>
            </div>
          ))
        }
      </div>
      <div class="button-container">
        <button class="load-more">さらに表示</button>
      </div>
    </section>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var loadMoreButton = document.querySelector(".load-more");
        var cards = document.querySelectorAll(".card.hidden");

        loadMoreButton.addEventListener("click", function () {
          cards.forEach(function (card) {
            card.classList.toggle("hidden");
          });

          if (loadMoreButton.textContent === "さらに表示") {
            loadMoreButton.textContent = "表示を減らす";
          } else {
            loadMoreButton.textContent = "さらに表示";
          }
        });
      });
    </script>
  </body>
</html>
